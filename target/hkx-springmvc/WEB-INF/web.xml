<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>HKXDispatcherServlet</servlet-name>
        <servlet-class>hkx.study.gp.spring.framework.webmvc.servlet.HKXDispatcherServlet</servlet-class>
        <init-param>
            <param-name>configLocation</param-name>
            <param-value>classpath:hkxapp.properties</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>HKXDispatcherServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>
